          <dc:Bounds x="127" y="153" width="85" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_obtener-datos-cliente" bpmnElement="obtener-datos-cliente">
        <dc:Bounds x="240" y="90" width="100" height="80" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_gateway-cliente-encontrado" bpmnElement="gateway-cliente-encontrado" isMarkerVisible="true">
        <dc:Bounds x="395" y="105" width="50" height="50" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="389" y="76" width="62" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_validar-tarjeta-credito" bpmnElement="validar-tarjeta-credito">
        <dc:Bounds x="500" y="90" width="100" height="80" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_actualizar-estado-en-proceso" bpmnElement="actualizar-estado-en-proceso">
        <dc:Bounds x="660" y="90" width="100" height="80" />
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_fin-cliente-validado" bpmnElement="fin-cliente-validado">
        <dc:Bounds x="822" y="112" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="800" y="153" width="80" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_evento-cliente-no-encontrado" bpmnElement="evento-cliente-no-encontrado">
