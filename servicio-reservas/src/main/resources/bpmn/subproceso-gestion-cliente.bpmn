        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_evento-tarjeta-invalida" bpmnElement="evento-tarjeta-invalida">
        <dc:Bounds x="532" y="232" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="513" y="272" width="75" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape id="Shape_evento-error-tarjeta" bpmnElement="evento-error-tarjeta">
        <dc:Bounds x="532" y="152" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="555" y="188" width="75" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge id="Edge_flujo-a-obtener-cliente" bpmnElement="flujo-a-obtener-cliente">
        <di:waypoint x="188" y="130" />
        <di:waypoint x="240" y="130" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Edge_flujo-a-gateway-cliente" bpmnElement="flujo-a-gateway-cliente">
        <di:waypoint x="340" y="130" />
        <di:waypoint x="395" y="130" />
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Edge_flujo-cliente-encontrado-si" bpmnElement="flujo-cliente-encontrado-si">
        <di:waypoint x="445" y="130" />
        <di:waypoint x="500" y="130" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="467" y="105" width="11" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Edge_flujo-cliente-encontrado-no" bpmnElement="flujo-cliente-encontrado-no">
        <di:waypoint x="420" y="155" />
        <di:waypoint x="420" y="232" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="428" y="184" width="14" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge id="Edge_flujo-a-actualizar-estado" bpmnElement="flujo-a-actualizar-estado">
