# ============================================================================
# VARIABLES DE ENTORNO - MICROSERVICIO CLIENTE
# ============================================================================
# Este archivo sirve como plantilla. Copia este archivo a .env y ajusta
# los valores según tu entorno.
#
# IMPORTANTE: El archivo .env NO debe subirse a Git (está en .gitignore)
# ============================================================================

# ============================================================================
# PERFIL DE SPRING BOOT
# ============================================================================
# Valores posibles: dev, prod
SPRING_PROFILES_ACTIVE=dev

# ============================================================================
# SERVIDOR
# ============================================================================
SERVER_PORT=9080

# ============================================================================
# BASE DE DATOS
# ============================================================================
# Para desarrollo (H2)
DB_URL=jdbc:h2:mem:clientedb
DB_USERNAME=sa
DB_PASSWORD=
DB_DRIVER=org.h2.Driver
HIBERNATE_DIALECT=org.hibernate.dialect.H2Dialect
DDL_AUTO=create-drop
SHOW_SQL=true
H2_CONSOLE_ENABLED=true

# Para producción (PostgreSQL) - descomentar y configurar
#DB_URL=jdbc:postgresql://localhost:5432/clientedb
#DB_USERNAME=postgres
#DB_PASSWORD=tu_password_seguro
#DB_DRIVER=org.postgresql.Driver
#HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
#DDL_AUTO=validate
#SHOW_SQL=false
#H2_CONSOLE_ENABLED=false

# ============================================================================
# CAMUNDA PLATFORM 8
# ============================================================================
# Zeebe Gateway
ZEEBE_GATEWAY_ADDRESS=localhost:26500
ZEEBE_REST_ADDRESS=http://localhost:8080
ZEEBE_PLAINTEXT=true

# Credenciales (demo para desarrollo, cambiar en producción)
CAMUNDA_USERNAME=demo
CAMUNDA_PASSWORD=demo
CAMUNDA_MODE=self-managed

# Workers
WORKER_THREADS=4
MAX_JOBS_ACTIVE=10

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=WARN
LOG_LEVEL_CAMUNDA=INFO
LOG_LEVEL_HIKARI=INFO
LOG_FILE=logs/servicio-cliente.log

# ============================================================================
# ACTUATOR / HEALTH
# ============================================================================
HEALTH_SHOW_DETAILS=always

# ============================================================================
# SWAGGER / OPENAPI
# ============================================================================
SWAGGER_ENABLED=true

# ============================================================================
# CORS
# ============================================================================
# Separar múltiples orígenes con comas
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200,http://localhost:5173

# ============================================================================
# ENVIRONMENT TAG (para métricas)
# ============================================================================
ENVIRONMENT=local
